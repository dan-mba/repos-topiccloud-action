{
  "name": "repos-topiccloud-action",
  "version": "0.7.2",
  "description": "GitHub Action to generate a SVG wordcloud for a GitHub user",
  "main": "index.js",
  "scripts": {
    "build": "tsc && ncc build build/index.js -o dist --source-map",
    "testrun": "tsc && ncc run build/index.js",
    "test": "node build/test/test.js",
    "testtopics": "node build/test/test-topics.js",
    "testcloud": "tsc && node build/test/test-cloud.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dan-mba/repos-topiccloud-action.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dan-mba/repos-topiccloud-action/issues"
  },
  "homepage": "https://github.com/dan-mba/repos-topiccloud-action#readme",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@actions/github": "^5.0.3",
    "@vercel/ncc": "^0.34.0",
    "d3": "^7.6.1",
    "d3-cloud": "^1.2.5",
    "jsdom": "^20.0.0",
    "randomcolor": "^0.6.2",
    "skia-canvas": "^1.0.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/d3": "^7.4.0",
    "@types/d3-cloud": "^1.2.5",
    "@types/jsdom": "^20.0.0",
    "@types/randomcolor": "^0.5.6",
    "@types/skia-canvas": "^0.9.28",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0"
  }
